@{
    Layout = "_StudentManagentLayout";
}
@model List<MS.CoachSystem.Core.DTOs.CoachingResourceDtos.CoachingResourceWithDetails>



<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center ms-2 mb-3">
        <h2 class="c-black">Kaynaklar</h2>
        <a class="btn btn-primary me-3" asp-action="Create" asp-controller="CoachingResource">Kaynak Ekle</a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Kaynak</th>
                <th scope="col">Kaynak Açıklaması</th>
                <th scope="col">Kaynak URL</th>
                <th scope="col">Kaynak Tipi</th>
                <th scope="col">Kaynak Etiketleri</th>
                <th scope="col"></th>
                <th scope="col"></th>

            </tr>
        </thead>
        <tbody>
            @if (Model is null || Model.Count == 0)
            {
            }
            else
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td></td>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td>@item.URL</td>
                        <td>@item.ResourceTypeName</td>
                        <td>
                            @foreach (var tag in item.Tags)
                            {
                                <span class="badge bg-primary me-1">@tag</span>
                            }
                        </td>
                        <td>
                            <a class="btn btn-outline-info" asp-action="Update" asp-controller="CoachingResource" asp-route-id="@item.Id">Güncelle</a>
                        </td>
                        <td>
                            <a class="btn btn-outline-danger" asp-action="Delete" asp-controller="CoachingResource" asp-route-id="@item.Id">Sil</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>