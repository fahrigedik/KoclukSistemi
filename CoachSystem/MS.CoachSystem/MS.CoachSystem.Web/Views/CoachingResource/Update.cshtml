@model MS.CoachSystem.Web.ViewModels.UpdateCoachingResourceViewModel

@{
    ViewData["Title"] = "Kaynağı Güncelle";
    Layout = "_StudentManagentLayout";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0"><i class="fas fa-edit me-2"></i>Kaynağı Güncelle</h3>
        </div>
        <div class="card-body">
            <form asp-action="Update" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="form-group mb-3">
                    <label asp-for="Title" class="form-label">Başlık</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-heading"></i></span>
                        <input asp-for="Title" class="form-control" placeholder="Kaynak başlığını giriniz"/>
                    </div>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Description" class="form-label">Açıklama</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-align-left"></i></span>
                        <textarea asp-for="Description" class="form-control" rows="3" 
                                placeholder="Kaynak açıklamasını giriniz"></textarea>
                    </div>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="URL" class="form-label">URL</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-link"></i></span>
                        <input asp-for="URL" class="form-control" placeholder="Kaynak URL'sini giriniz"/>
                    </div>
                    <span asp-validation-for="URL" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ResourceTypeId" class="form-label">Kaynak Tipi</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-bookmark"></i></span>
                        <select asp-for="ResourceTypeId" class="form-select" asp-items="Model.ResourceTypes">
                            <option value="">Kaynak tipi seçiniz...</option>
                        </select>
                    </div>
                    <span asp-validation-for="ResourceTypeId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="SelectedTags" class="form-label">Etiketler</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-tags"></i></span>
                        <select asp-for="SelectedTags" class="form-select select2" 
                                asp-items="Model.Tags" multiple="multiple"></select>
                    </div>
                    <span asp-validation-for="SelectedTags" class="text-danger"></span>
                </div>

                <div class="text-end mt-4">
                    <a asp-action="Index" class="btn btn-secondary me-2">
                        <i class="fas fa-arrow-left"></i> İptal
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Güncelle
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.select2').select2({
                placeholder: "Etiket seçiniz...",
                allowClear: true
            });
        });
    </script>
}