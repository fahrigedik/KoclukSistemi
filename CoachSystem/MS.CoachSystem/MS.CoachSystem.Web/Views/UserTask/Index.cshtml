@{
    Layout = "_StudentManagentLayout";
}
@model List<MS.CoachSystem.Core.DTOs.UserTaskDto>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Görevler</h2>
    <button class="btn btn-primary">Görev Ekle</button>
</div>

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Görev Başlığı</th>
            <th scope="col">Görev Açıklaması</th>
            <th scope="col">Görev Durumu</th>
            <th scope="col">Görev Önceliği</th>
            <th scope="col">Bitiş Tarihi</th>
            <th scope="col">Bitirilme Tarihi</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.Status</td>
            <td>@item.Priority</td>
            <td>@item.DueDate?.ToString("dd.MM.yyyy HH:mm")</td>
            <td>@item.CompletedDate?.ToString("dd.MM.yyyy HH:mm")</td>
        </tr>
    }
    </tbody>
</table>