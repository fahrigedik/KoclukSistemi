@model IEnumerable<MS.CoachSystem.Entity.Entities.GoalType>

<div class="container-fluid py-4">
    <!-- Header Card -->
    <div class="card mb-4 border-0 shadow-sm">
        <div class="card-body d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="fas fa-bullseye text-primary me-2"></i>
                Hedef Tipleri Yönetimi
            </h5>
            <a class="btn btn-primary" asp-action="Create">
                <i class="fas fa-plus me-2"></i>Yeni Hedef Tipi
            </a>
        </div>
    </div>

    <!-- Main Card -->
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table id="goalTypesTable" class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Tip Adı</th>
                            <th>Açıklama</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.TypeName</td>
                                <td>@item.Description</td>x
                                <td>
                                    <a class="btn btn-sm btn-warning" asp-action="Update" asp-controller="GoalType" asp-route-id="@item.Id">
                                        Güncelle
                                    </a>
                                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-controller="GoalType" asp-route-id="@item.Id">
                                        Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

