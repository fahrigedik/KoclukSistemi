@{
}
@model MS.CoachSystem.Web.ViewModels.UpdateGoalViewModel

@{
    ViewData["Title"] = "Hedef Güncelle";
    Layout = "_StudentManagentLayout";
}

<div class="container mt-4">
    <h2>Hedef Güncelle</h2>

    <form asp-action="Update" method="post" class="form-horizontal">
        <input type="hidden" asp-for="Goal.Id" />
        <input type="hidden" asp-for="Goal.CoachID" value="@Model.Goal.CoachID" />
        <input type="hidden" asp-for="Goal.StudentID" value="@Model.Goal.StudentID" />

        <div class="form-group">
            <label asp-for="Goal.GoalTitle" class="control-label"></label>
            <input asp-for="Goal.GoalTitle" class="form-control" />
            <span asp-validation-for="Goal.GoalTitle" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Goal.GoalDescription" class="control-label"></label>
            <textarea asp-for="Goal.GoalDescription" class="form-control"></textarea>
            <span asp-validation-for="Goal.GoalDescription" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Goal.Status" class="control-label"></label>
            <textarea asp-for="Goal.Status" class="form-control"></textarea>
            <span asp-validation-for="Goal.Status" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Goal.GoalTypeId" class="control-label"></label>
            <select asp-for="Goal.GoalTypeId" class="form-control" asp-items="Model.GoalTypes"></select>
            <span asp-validation-for="Goal.GoalTypeId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Goal.DueDate" class="control-label"></label>
            <input asp-for="Goal.DueDate" class="form-control" type="datetime-local" />
            <span asp-validation-for="Goal.DueDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Goal.CompletedDate" class="control-label"></label>
            <input asp-for="Goal.CompletedDate" class="form-control" type="datetime-local" />
            <span asp-validation-for="Goal.CompletedDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Hedef Güncelle" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

