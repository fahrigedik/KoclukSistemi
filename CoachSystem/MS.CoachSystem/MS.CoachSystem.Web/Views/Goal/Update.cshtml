@model MS.CoachSystem.Web.ViewModels.UpdateGoalViewModel

@{
    ViewData["Title"] = "Hedef Güncelle";
    Layout = "_StudentManagentLayout";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0"><i class="fas fa-edit me-2"></i>Hedef Güncelle</h3>
        </div>
        <div class="card-body">
            <form asp-action="Update" method="post">
                <input type="hidden" asp-for="Goal.Id" />
                <input type="hidden" asp-for="Goal.CoachID" value="@Model.Goal.CoachID" />
                <input type="hidden" asp-for="Goal.StudentID" value="@Model.Goal.StudentID" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Goal.GoalTitle" class="form-label">Hedef Başlığı</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-flag"></i></span>
                                <input asp-for="Goal.GoalTitle" class="form-control" placeholder="Hedef başlığını giriniz"/>
                            </div>
                            <span asp-validation-for="Goal.GoalTitle" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Goal.Status" class="form-label">Durum</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-tasks"></i></span>
                                <select asp-for="Goal.Status" class="form-select">
                                    <option value="">Seçiniz...</option>
                                    <option value="NotStarted">Başlanmadı</option>
                                    <option value="InProgress">Devam Ediyor</option>
                                    <option value="Completed">Tamamlandı</option>
                                </select>
                            </div>
                            <span asp-validation-for="Goal.Status" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Goal.DueDate" class="form-label">Bitiş Tarihi</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-calendar"></i></span>
                                <input asp-for="Goal.DueDate" class="form-control" type="datetime-local"/>
                            </div>
                            <span asp-validation-for="Goal.DueDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Goal.GoalTypeId" class="form-label">Hedef Tipi</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-tag"></i></span>
                                <select asp-for="Goal.GoalTypeId" class="form-select" asp-items="Model.GoalTypes">
                                    <option value="">Hedef tipi seçiniz...</option>
                                </select>
                            </div>
                            <span asp-validation-for="Goal.GoalTypeId" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Goal.CompletedDate" class="form-label">Tamamlanma Tarihi</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-check-circle"></i></span>
                                <input asp-for="Goal.CompletedDate" class="form-control" type="datetime-local"/>
                            </div>
                            <span asp-validation-for="Goal.CompletedDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="form-group mb-3">
                            <label asp-for="Goal.GoalDescription" class="form-label">Açıklama</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-align-left"></i></span>
                                <textarea asp-for="Goal.GoalDescription" class="form-control" rows="3" 
                                        placeholder="Hedef açıklamasını giriniz"></textarea>
                            </div>
                            <span asp-validation-for="Goal.GoalDescription" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="text-end mt-4">
                    <a asp-action="Index" class="btn btn-secondary me-2">
                        <i class="fas fa-arrow-left"></i> İptal
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Güncelle
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}