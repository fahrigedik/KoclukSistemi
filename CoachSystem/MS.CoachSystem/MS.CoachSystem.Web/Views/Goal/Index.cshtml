@{
    Layout = "_StudentManagentLayout";
}
@model List<MS.CoachSystem.Core.DTOs.GoalDtos.GoalWithTypeNamesDto>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center ms-2 mb-3">
        <h2 class="c-black">Hedefler</h2>
        <a class="btn btn-primary me-3" asp-action="Create" asp-controller="Goal">Görev Ekle</a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Hedef</th>
                <th scope="col">Hedef Açıklaması</th>
                <th scope="col">Hedef Durumu</th>
                <th scope="col">Hedef Tipi</th>
                <th scope="col">Bitiş Tarihi</th>
                <th scope="col">Bitirilme Tarihi</th>
                <th scope="col"></th>
                <th scope="col"></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td></td>
                    <td>@item.GoalTitle</td>
                    <td>@item.GoalDescription</td>
                    <td>@item.Status</td>
                    <td>
                        @item.GoalTypeName
                    </td>
                    <td>@item.DueDate?.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>@item.CompletedDate?.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>
                        <a class="btn btn-outline-info" asp-action="Update" asp-controller="Goal" asp-route-id="@item.Id">Güncelle</a>
                    </td>
                    <td>
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-controller="Goal" asp-route-id="@item.Id">Sil</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>