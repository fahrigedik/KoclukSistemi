@{
}
@model List<MS.CoachSystem.Core.DTOs.StudentUserResponseDto>

<div class="d-flex justify-content-between align-items-center mt-4 ms-4 mb-3">
    <h2 class="c-black">Öğrencilerim</h2>
    <a class="btn btn-success me-4" asp-action="Create" asp-controller="Student">Yeni Öğrenci Ekle</a>
</div>


@if (Model is null)
{
    <div class="alert alert-info" role="alert">
        Henüz öğrenci eklenmemiştir.
    </div>
}
else
{
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr class="c-black">
                <th scope="col">#</th>
                <th scope="col">İsim</th>
                <th scope="col">Soyisim</th>
                <th scope="col">Email</th>
                <th scope="col">Telefon</th>
                <th scope="col">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row"></th>
                    <td>@item.Name</td>
                    <td>@item.Surname</td>
                    <td>@item.Email</td>
                    <td>@item.PhoneNumber</td>
                    <td>
                        <div class="dropdown ">
                            <button class="btn btn-info text-white dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                İşlemler
                            </button>
                            <ul class="dropdown-menu">
                                <li>
                                    <a href="#" class="dropdown-item">Düzenle</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-action="ManageStudent" asp-route-studentId="@item.Id">Yönet</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-action="DeleteStudent" asp-route-studentId="@item.Id">Sil</a>
                                </li>
                            </ul>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}