@{
    Layout = "_LoginRegisterLayout";
}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card profile-card border-0 shadow-lg">
                <div class="card-header bg-primary text-white text-center py-4">
                    <div class="profile-image mb-3">
                        <img src="https://via.placeholder.com/150" class="rounded-circle border border-4 border-white shadow" alt="Profile Image">
                    </div>
                    <h3 class="mb-0">@ViewBag.Name @ViewBag.Surname</h3>
                    <p class="text-white-50 mb-0">@ViewBag.UserName</p>
                </div>
                <div class="card-body p-4">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="info-item">
                                <i class="fas fa-envelope text-primary me-2"></i>
                                <span class="label">Email:</span>
                                <span class="value">@ViewBag.Email</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <i class="fas fa-map-marker-alt text-primary me-2"></i>
                                <span class="label">Şehir:</span>
                                <span class="value">@ViewBag.City</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <i class="fas fa-calendar text-primary me-2"></i>
                                <span class="label">Doğum Tarihi:</span>
                                <span class="value">@ViewBag.BirthDate.ToString("dd/MM/yyyy")</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item">
                                <i class="fas fa-id-card text-primary me-2"></i>
                                <span class="label">TCKN:</span>
                                <span class="value">@ViewBag.TCKN</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .profile-card {
        border-radius: 15px;
        overflow: hidden;
        transition: transform 0.3s;
    }

        .profile-card:hover {
            transform: translateY(-5px);
        }

    .profile-image img {
        width: 150px;
        height: 150px;
        object-fit: cover;
    }

    .info-item {
        padding: 10px;
        background: #f8f9fa;
        border-radius: 8px;
    }

        .info-item .label {
            font-weight: 600;
            color: #6c757d;
            margin-right: 5px;
        }

        .info-item .value {
            color: #212529;
        }


</style>